{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@models/*": ["models/*"],
            "@schemas/*": ["schemas/*"],
            "@interfaces/*": ["interfaces/*"],
            "@_types/*": ["types/*"],
            "@services/*": ["services/*"],
            "@controllers/*": ["controllers/*"],
            "@routes/*": ["routes/*"],
            "@middlewares/*": ["middlewares/*"],
            "@errors": ["errors/index.ts"],
            "@utils/*": ["utils/*"],
            "@tests/*": ["tests/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
