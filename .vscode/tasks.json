{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch Build",
            "type": "shell",
            "command": "npm run build",
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Watch Alias",
            "type": "shell",
            "command": "npm run build-alias",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "."
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Nodemon",
            "type": "shell",
            "command": "npm start",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "."
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Dev Workflow",
            "dependsOn": ["Watch Build", "Watch Alias", "Run Nodemon"],
            "dependsOrder": "sequence"
        }
    ]
}
